<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Verba - <%= blog.title %></title>
</head>
<body class="bg-black text-white">
    <%- include('partials/nav') %>

    <div class="max-w-4xl mx-auto px-6 py-10">
        <!-- Blog Image -->
        <div class="overflow-hidden rounded-xl shadow-lg mb-8">
            <img src="/<%= blog.coverImage %>" 
                 alt="<%= blog.title %>" 
                 class="w-full h-80 object-cover transform hover:scale-105 transition duration-500 ease-in-out">
        </div>

        <!-- Blog Title -->
        <h1 class="text-5xl font-extrabold bg-gradient-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent mb-4">
            <%= blog.title %>
        </h1>

        <!-- Blog Meta -->
        <div class="flex items-center gap-4 text-gray-400 text-sm mb-10">
            <img src="<%= blog.createdBy.profileImage %>" alt="<%= blog.createdBy.username %>" 
                 class="w-16 h-10 rounded-full  border-gray-700 shadow">
            <div>
                <p class="font-semibold text-white"><%= blog.createdBy.username %></p>
                <p class="text-gray-400">Posted on <%= blog.createdAt.toDateString() %></p>
            </div>
        </div>

        <!-- Blog Content -->
        <div class="prose prose-invert prose-lg max-w-none leading-relaxed text-gray-200 mb-12">
            <p><%= blog.body %></p>
        </div>

        <!-- Comments Section -->
        <div class="border-t border-gray-700 pt-8">
            <h2 class="text-2xl font-bold mb-6">ðŸ’¬ Comments (<%= comments.length %>)</h2>
            
            <!-- Comment Form -->
            <form action="/comment/<%= blog._id %>" method="POST" 
                  class="mb-8 bg-zinc-900 p-5 rounded-lg shadow-lg">
                <textarea name="content" rows="3" 
                          class="w-full p-3 bg-zinc-800 text-white rounded-lg mb-4 focus:ring-2 focus:ring-blue-500 outline-none"
                          placeholder="Add your comment..." required></textarea>
                <button type="submit" 
                        class="bg-gradient-to-r from-zinc-600 to-gray-600 hover:from-zinc-700 hover:to-stone-700 
                               text-white px-6 py-2 rounded-lg shadow-md transition">
                    Post Comment
                </button>
            </form>

            <!-- Comment List -->
            <div class="space-y-5">
                <% comments.forEach(comment => { %>
                    <div class="bg-zinc-900 p-5 rounded-lg shadow-md hover:shadow-lg transition">
                        <div class="flex items-center gap-3 mb-3">
                            <img src="<%= comment.createdBy.profileImage %>" 
                                 alt="<%= comment.createdBy.username %>" 
                                 class="w-15 h-10 rounded-full  border-gray-700">
                            <div>
                                <p class="font-medium text-white"><%= comment.createdBy.username %></p>
                                <p class="text-xs text-gray-500">
                                    <%= comment.createdAt.toDateString() %>
                                </p>
                            </div>
                        </div>
                        <p class="text-gray-300 leading-relaxed"><%= comment.content %></p>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

</body>
</html>
